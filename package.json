{
  "name": "civil-movement",
  "version": "1.0.0",
  "description": "Thailand civil movement in 2020 vitulization",
  "license": "MIT",
  "@comments scripts": {
    "dev": "develop with blazing fast rebuilds",
    "dev:features": "develop with features like SSR and serviceworker enabled",
    "build": "run build scripts below",
    "build:app": "build single page application (SPA)",
    "build:static": "Generate static pages",
    "serve": "serve content in 'dist' folder",
    "rollup": "run the rollup bundler",
    "nollup": "run the nollup no-bundler",
    "routify": "run routify"
  },
  "scripts": {
    "dev": "run-p routify nollup",
    "dev:ssr": "run-p routify rollup",
    "build": "run-s build:*",
    "build:app": "routify -b && rollup -c",
    "build:static": "spank",
    "serve": "spassr --ssr",
    "rollup": "rollup -cw",
    "nollup": "nollup -c",
    "routify": "routify",
    "validate": "svelte-check --fail-on-warnings --fail-on-hints",
    "precommit": "npm run validate && lint-staged"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^15.0.0",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@rollup/plugin-typescript": "^6.0.0",
    "@roxi/routify": "^2.8.5",
    "@tsconfig/svelte": "^1.0.0",
    "autoprefixer": "^10.2.1",
    "cross-env": "^7.0.2",
    "cssnano": "^4.1.10",
    "fs-extra": "^9.0.1",
    "husky": "^4.3.7",
    "lint-staged": "^10.5.3",
    "nollup": "^0.13.13",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.4",
    "postcss-import": "^14.0.0",
    "prettier": "^2.2.1",
    "rollup": "^2.33.1",
    "rollup-plugin-hot": "^0.1.1",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^6.1.0",
    "rollup-plugin-svelte-hot": "^0.11.1",
    "rollup-plugin-terser": "^7.0.2",
    "spank": "^1.4.0",
    "spassr": "^2.1.6",
    "svelte": "^3.29.4",
    "svelte-check": "^1.0.0",
    "svelte-preprocess": "^4.6.1",
    "tailwindcss": "^2.0.2",
    "tossr": "^1.3.1",
    "tslib": "^2.0.0",
    "typescript": "^3.9.3"
  },
  "routify": {
    "extensions": "svelte,html,svx,md"
  },
  "spassr": {
    "assetsDir": [
      "dist",
      "assets"
    ],
    "script": "dist/build/main.js",
    "ssrOptions": {
      "inlineDynamicImports": true
    }
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit"
    }
  }
}
